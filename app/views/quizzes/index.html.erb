<p id="notice"><%= notice %></p>

<h1>Quizzes</h1>

<table>
  <thead>
  <tr>
    <th>Topic</th>
    <th>Description</th>
    <th>Organization</th>
    <th>Tags</th>
    <th>Ratings</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @quizzes.each do |quiz| %>
    <tr>
      <td><%= quiz.topic %></td>
      <td><%= quiz.description %></td>
      <td><%= quiz.organization.name %></td>
      <td> <%= quiz.tags.pluck(:level).join(",") %></td>
      <% if quiz.ratings.any? %>
        <td><%= quiz.ratings.average(:score).round(1) %></td>
      <% else %>
        <td>0</td>
      <% end %>
      <td><%= link_to 'Show', organization_quiz_path(@organization, quiz) %></td>
      <td><%= link_to 'Edit', edit_organization_quiz_path(@organization, quiz) %></td>
      <td><%= link_to 'Destroy', organization_quiz_path(@organization, quiz), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

